    <div class="container pb-3">
        <h2 class="container p-3 my-3">Nhập số liệu</h2>
        <div class="container">
            <form method="POST" action="/add_manager">
                <div class="container d-flex ml-auto mr-auto res500">
                    <div class="form-group col">
                        <label for="">Tên người dùng</label>
                        <input type="text" name="username" id="hdk-name" class="form-control"
                            placeholder="Tên người dùng" required>
                    </div>
                    <div class="form-group col">
                        <label for="">Mật khẩu</label>
                        <input type="password" name="password" id="hdk-sdt" class="form-control" placeholder="Mật khẩu"
                            required>
                    </div>
                </div>
                <div class="container d-flex ml-auto mr-auto res500">
                    <div class="form-group col">
                        <label for="">Nhập lại mật khẩu</label>
                        <input type="password" name="repassword" id="hdk-cccd" class="form-control"
                            placeholder="Nhập lại mật khẩu" required>
                        <span id="message"></span>
                    </div>
                    <div class="form-group col">
                        <label for="">Email</label>
                        <input type="email" name="email" id="kqdk-sdt" class="form-control" placeholder="Email"
                            required>
                    </div>
                </div>
                <div class="container" id="submit-input">
                    <button type="submit" class="btn btn-primary">Nhập lại</button>
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                </div>
            </form>
        </div>
