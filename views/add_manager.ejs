    <script src="./assets/js/index.js"></script>
    <script>
        $('#hdk-sdt, #hdk-cccd').on('keyup', function () {
            if ($('#hdk-sdt').val() == $('#hdk-cccd').val()) {
                $('#message').html('Mật khẩu khớp').css('color', 'green');
            } else
                $('#message').html('Mật khẩu không khớp').css('color', 'red');
        });
    </script>
